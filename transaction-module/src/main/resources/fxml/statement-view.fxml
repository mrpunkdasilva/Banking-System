<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane stylesheets="@../styles/statement.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.jala.university.presentation.controller.StatementController">

    <top>
        <HBox spacing="10">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <Label styleClass="header-label" text="Extrato">
            <font>
               <Font size="45.0" />
            </font></Label>
            <Region HBox.hgrow="ALWAYS" />
            <Button onAction="#handleBack" text="Voltar" />
        </HBox>
    </top>

    <center>
        <VBox prefHeight="544.0" prefWidth="1159.0" spacing="15">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
            <HBox spacing="10">
                <Label text="Início:" />
                <DatePicker fx:id="startDatePicker" />
                <Label text="Fim:" />
                <DatePicker fx:id="endDatePicker" />
                <Button onAction="#handleFilter" text="Filtrar" />
            </HBox>

            <TableView fx:id="statementTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="dateColumn" prefWidth="120" text="Data" />
                    <TableColumn fx:id="descriptionColumn" prefWidth="200" text="Descrição" />
                    <TableColumn fx:id="counterpartyColumn" prefWidth="180" text="Destinatário" />
                    <TableColumn fx:id="statusColumn" prefWidth="100" text="Status" />
                    <TableColumn fx:id="amountColumn" prefWidth="100" text="Valor" />
                </columns>
                <placeholder>
                    <Label text="Nenhuma transação encontrada" />
                </placeholder>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>

            <HBox spacing="10">
                <Button fx:id="exportCsvButton" onAction="#handleExportCsv" text="Exportar CSV" />
                <Button fx:id="exportPdfButton" onAction="#handleExportPdf" text="Exportar PDF" />
            </HBox>
        </VBox>
    </center>
</BorderPane>
