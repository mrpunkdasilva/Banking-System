<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane stylesheets="@../styles/two-factor-verification.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.jala.university.presentation.controller.TwoFactorVerificationController">
    <center>
        <ScrollPane fitToWidth="true" styleClass="transparent-scroll-pane">
            <content>
                <VBox alignment="CENTER" spacing="20.0">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                    <children>
                        <Label styleClass="heading-primary" text="Verificação de Dois Fatores" />
                        <Label styleClass="heading-secondary" text="Um código de verificação foi enviado para seu email." wrapText="true" />
                        <TextField fx:id="codeField" promptText="Digite o código de 6 dígitos" />
                        <HBox alignment="CENTER" spacing="10.0">
                            <Button fx:id="verifyButton" onAction="#handleVerify" styleClass="verify-button" text="Verificar" />
                            <Button fx:id="resendButton" onAction="#handleResend" styleClass="resend-button" text="Reenviar Código" />
                        </HBox>
                        <Label fx:id="errorLabel" textFill="RED" visible="false" />
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>
