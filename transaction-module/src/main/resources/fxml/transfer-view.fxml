<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.StackPane?>

<BorderPane styleClass="main-pane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.jala.university.presentation.controller.TransferController"
            prefHeight="600.0" prefWidth="750.0" minHeight="600.0" minWidth="750.0"
            stylesheets="@../styles/transfer-view.css">
    <center>
        <HBox prefHeight="600.0" minHeight="600.0">
            <!-- Painel Esquerdo - Formulário de Transferência -->
            <children>
                <VBox prefWidth="450.0" prefHeight="600.0" minHeight="600.0" styleClass="left-pane">
                    <children>
                        <ScrollPane fitToWidth="true" styleClass="transparent-scroll-pane" VBox.vgrow="ALWAYS">
                            <content>
                                <VBox spacing="25.0">
                                    <padding>
                                        <Insets bottom="30.0" left="40.0" right="40.0" top="30.0"/>
                                    </padding>
                                    <children>
                                        <!-- Cabeçalho com título e ícone -->
                                        <HBox alignment="CENTER_LEFT" spacing="15.0">
                                            <children>
                                                <!-- Ícone de transferência -->
                                                <StackPane styleClass="icon-container" minWidth="50.0" minHeight="50.0"
                                                           maxWidth="50.0" maxHeight="50.0">
                                                    <children>
                                                        <Circle radius="25.0" styleClass="icon-background"/>
                                                        <Label text="↔" styleClass="transfer-icon">
                                                            <font>
                                                                <Font size="24.0"/>
                                                            </font>
                                                        </Label>
                                                    </children>
                                                </StackPane>

                                                <!-- Título "Transfer" -->
                                                <Label styleClass="transfer-title" text="Transfer">
                                                    <font>
                                                        <Font name="System Bold" size="32.0"/>
                                                    </font>
                                                </Label>
                                            </children>
                                        </HBox>

                                        <!-- Subtítulo -->
                                        <Label styleClass="transfer-subtitle"
                                               text="Move money between your accounts or to other people">
                                            <VBox.margin>
                                                <Insets top="-15.0" bottom="10.0"/>
                                            </VBox.margin>
                                        </Label>

                                        <!-- Campos de entrada -->
                                        <VBox spacing="25.0" VBox.vgrow="ALWAYS">
                                            <VBox.margin>
                                                <Insets top="10.0"/>
                                            </VBox.margin>
                                            <children>
                                                <!-- Conta de origem -->
                                                <VBox spacing="8.0">
                                                    <children>
                                                        <Label styleClass="field-label" text="From Account"/>
                                                        <ComboBox fx:id="sourceAccountCombo" maxWidth="Infinity"
                                                                  promptText="Select source account" styleClass="combo-box"
                                                                  HBox.hgrow="ALWAYS"/>
                                                    </children>
                                                </VBox>

                                                <!-- Conta de destino -->
                                                <VBox spacing="8.0">
                                                    <children>
                                                        <Label styleClass="field-label" text="To Account"/>
                                                        <ComboBox fx:id="destinationAccountCombo" maxWidth="Infinity"
                                                                  promptText="Select destination account"
                                                                  styleClass="combo-box" HBox.hgrow="ALWAYS"/>
                                                    </children>
                                                </VBox>

                                                <!-- Valor -->
                                                <VBox spacing="8.0">
                                                    <children>
                                                        <Label styleClass="field-label" text="Amount"/>
                                                        <TextField fx:id="amountField" promptText="R$0.00"
                                                                   styleClass="input-field"/>
                                                    </children>
                                                </VBox>

                                                <!-- Data de Agendamento -->
                                                <VBox spacing="8.0">
                                                    <children>
                                                        <Label styleClass="field-label"
                                                               text="Schedule Date (Optional)"/>
                                                        <DatePicker fx:id="scheduleDatePicker" maxWidth="Infinity"
                                                                    promptText="Select date" styleClass="date-picker"/>
                                                    </children>
                                                </VBox>

                                                <!-- Descrição -->
                                                <VBox spacing="8.0" VBox.vgrow="ALWAYS">
                                                    <children>
                                                        <Label styleClass="field-label" text="Description (Optional)"/>
                                                        <TextArea fx:id="descriptionField" prefHeight="100.0"
                                                                  minHeight="100.0"
                                                                  promptText="Add a note about this transfer"
                                                                  styleClass="input-field" wrapText="true"
                                                                  VBox.vgrow="ALWAYS"/>
                                                    </children>
                                                </VBox>
                                            </children>
                                        </VBox>

                                        <!-- Link "Cancel" e botão de transferência -->
                                        <HBox alignment="CENTER" spacing="20.0">
                                            <VBox.margin>
                                                <Insets top="30.0"/>
                                            </VBox.margin>
                                            <children>
                                                <Hyperlink fx:id="cancelLink" onAction="#handleCancel"
                                                           styleClass="cancel-link" text="CANCEL"/>
                                                <Button fx:id="transferButton" defaultButton="true"
                                                        mnemonicParsing="false" onAction="#handleTransfer"
                                                        prefWidth="150.0" styleClass="transfer-button"
                                                        text="TRANSFER"/>
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>
                            </content>
                        </ScrollPane>
                    </children>
                </VBox>

                <!-- Painel Direito - Menu de Navegação -->
                <VBox alignment="CENTER" prefWidth="300.0" prefHeight="600.0" minHeight="600.0" styleClass="right-pane">
                    <padding>
                        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
                    </padding>
                    <children>
                        <!-- Cabeçalho com círculos e perfil -->
                        <HBox alignment="TOP_RIGHT" spacing="10.0">
                            <children>
                                <Circle fx:id="whiteCircle" radius="8.0" styleClass="white-circle"/>
                                <Circle fx:id="redCircle" radius="8.0" styleClass="red-circle"/>
                            </children>
                        </HBox>

                        <!-- Perfil do usuário -->
                        <VBox alignment="CENTER" spacing="10.0" styleClass="user-profile">
                            <VBox.margin>
                                <Insets top="20.0" bottom="30.0"/>
                            </VBox.margin>
                            <children>
                                <!-- Avatar do usuário -->
                                <StackPane styleClass="avatar-container" minWidth="80.0" minHeight="80.0"
                                           maxWidth="80.0" maxHeight="80.0">
                                    <children>
                                        <Circle radius="40.0" styleClass="avatar-circle"/>
                                        <Label fx:id="avatarText" text="JP" styleClass="avatar-text"/>
                                    </children>
                                </StackPane>

                                <!-- Nome do usuário -->
                                <Label fx:id="userNameLabel" text="João Paulo" styleClass="user-name"/>

                                <!-- Status do usuário -->
                                <HBox alignment="CENTER" spacing="5.0" styleClass="user-status">
                                    <children>
                                        <Circle radius="4.0" styleClass="status-indicator"/>
                                        <Label text="Online" styleClass="status-text"/>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>

                        <!-- Menu de Navegação -->
                        <VBox alignment="CENTER" spacing="20.0" VBox.vgrow="ALWAYS">
                            <children>
                                <Label alignment="CENTER" styleClass="navigation-title" text="Menu"
                                       textAlignment="CENTER">
                                    <font>
                                        <Font name="System Bold" size="24.0"/>
                                    </font>
                                </Label>

                                <!-- Botões de navegação -->
                                <VBox spacing="15.0" alignment="CENTER">
                                    <Button fx:id="dashboardButton" onAction="#handleDashboard"
                                            styleClass="nav-button" text="DASHBOARD" maxWidth="Infinity"/>
                                    <Button fx:id="historyButton" onAction="#handleViewHistory"
                                            styleClass="nav-button" text="HISTORY" maxWidth="Infinity"/>
                                    <Button fx:id="beneficiariesButton" onAction="#handleBeneficiaries"
                                            styleClass="nav-button" text="BENEFICIARIES" maxWidth="Infinity"/>
                                    <Button fx:id="logoutButton" onAction="#handleLogout" styleClass="nav-button"
                                            text="LOGOUT" maxWidth="Infinity"/>
                                </VBox>
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </children>
        </HBox>
    </center>
</BorderPane>